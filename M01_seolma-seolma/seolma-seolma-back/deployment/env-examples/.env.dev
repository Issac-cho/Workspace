# 개발 환경 변수 설정 (AWS Dev VPC)
# EC2 개발 환경에서 사용

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Database Configuration (RDS 개발 인스턴스)
DB_HOST=dev-rds-endpoint.xxxxx.ap-northeast-2.rds.amazonaws.com
DB_PORT=3306

# Common DB (General Service: User + Product + Order)
COMMON_DB_NAME=ecommerce_dev_db
COMMON_DB_USERNAME=dev_admin
COMMON_DB_PASSWORD=change_this_dev_password

# Coupon DB (Coupon Service)
COUPON_DB_NAME=coupon_dev_db
COUPON_DB_USERNAME=dev_admin
COUPON_DB_PASSWORD=change_this_dev_password

# JWT Configuration
JWT_SECRET=devSecretKeyForJWTTokenGenerationThatShouldBeAtLeast256BitsLongForDevelopmentEnvironment
JWT_VALIDITY=7200

# CORS Configuration (개발 환경)
CORS_ALLOWED_ORIGINS=http://dev-frontend.your-domain.com,http://localhost:3000
CORS_ALLOWED_CREDENTIALS=true

# External Service URLs (EC2 Private IP - Dev VPC)
# EC2-1 Dev: Coupon Service Private IP
COUPON_SERVICE_URL=http://172.31.10.100:8081

# Server Ports
GENERAL_SERVICE_PORT=8080
COUPON_SERVICE_PORT=8081

# File Storage (S3 또는 로컬)
FILE_UPLOAD_DIR=/opt/tomcat/uploads
FILE_MAX_SIZE=10485760

# Logging Level
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_ECOMMERCE=DEBUG

# Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
